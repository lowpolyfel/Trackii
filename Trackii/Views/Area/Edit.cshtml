@model Trackii.Models.Admin.Area.AreaEditVm
@{
    ViewData["Title"] = "Editar Area";
}

<h2>Editar Area</h2>

<form method="post" action="/Admin/Area/Edit/@Model.Id">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <label>Nombre</label><br />
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span><br /><br />

    <button type="submit">Guardar</button>
    <a href="/Admin/Area">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
