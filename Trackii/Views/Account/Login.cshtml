@model Trackii.Models.LoginVm
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div class="container" style="max-width:420px; margin-top:8vh;">
    <h3>Trackii</h3>

    <form method="post" asp-action="Login">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ReturnUrl" />

        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" autocomplete="username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" autocomplete="current-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>

        <div class="text-danger mb-2">
            @Html.ValidationSummary(false)
        </div>

        <button type="submit" class="btn btn-primary w-100">Entrar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
