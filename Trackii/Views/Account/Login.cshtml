@model Trackii.Models.LoginVm
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-form">
            <div class="auth-brand">
                <span class="auth-logo">Tt</span>
                <span class="auth-title">Trackii</span>
            </div>

            <div class="auth-avatar">
                <i class="fa-solid fa-user"></i>
            </div>

            <form method="post" asp-action="Login" class="auth-fields">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="auth-field">
                    <label asp-for="Username" class="auth-label"></label>
                    <input asp-for="Username" class="auth-input" autocomplete="username" />
                    <span asp-validation-for="Username" class="auth-error"></span>
                </div>

                <div class="auth-field">
                    <label asp-for="Password" class="auth-label"></label>
                    <input asp-for="Password" class="auth-input" autocomplete="current-password" />
                    <span asp-validation-for="Password" class="auth-error"></span>
                </div>

                <div class="auth-meta">
                    <label class="auth-remember">
                        <input asp-for="RememberMe" />
                        <span>@Html.DisplayNameFor(m => m.RememberMe)</span>
                    </label>
                </div>

                <div class="auth-error">
                    @Html.ValidationSummary(false)
                </div>

                <button type="submit" class="auth-button">Login</button>
            </form>
        </div>

        <div class="auth-welcome">
            <div class="auth-welcome-overlay"></div>
            <div class="auth-welcome-content">
                <h2>Welcome.</h2>
                <p>Gestión y trazabilidad en tiempo real.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
