@model Trackii.Models.Admin.User.UserEditVm

<h2>Nuevo Usuario</h2>

<form method="post" action="/Admin/User/Create">
    @Html.AntiForgeryToken()

    <label>Username</label><br />
    <input asp-for="Username" />
    <span asp-validation-for="Username"></span>
    <br /><br />

    <label>Role</label><br />
    <select asp-for="RoleId">
        <option value="">-- Selecciona Role --</option>
        @foreach (var r in ViewBag.Roles as List<(uint Id, string Name)>)
        {
            <option value="@r.Id">@r.Name</option>
        }
    </select>
    <span asp-validation-for="RoleId"></span>
    <br /><br />

    <button type="submit">Guardar</button>
    <a href="/Admin/User">Cancelar</a>
</form>
